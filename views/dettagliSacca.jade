extends layout

block title
    title Sacca
block append style
    link(rel='stylesheet', href='/stylesheets/modalStyle.css')
block content
    body
        nav#navbarNavDropdown.navbar.navbar-expand-sm.navbar-dark.bg-dark.fixed-top
            ul.navbar-nav
                a#HomeButton.navbar-brand.homePage(href='#') Home
                .collapse.navbar-collapse
                    li.nav-item
                        a.nav-link(href='#fase1') Fase 1
                    li.nav-item
                        a#idFase2.nav-link(href='#fase2', hidden='true') Fase 2
                    li.nav-item
                        a#idFase3.nav-link(href='#fase3', hidden='true') Fase 3
                    li.nav-item
                        a#idFase4.nav-link(href='#fase4', hidden='true') Fase 4
                    li.nav-item
                        a#idFase5.nav-link(href='#fase5', hidden='true') Fase 5
                    li.nav-item
                        a#idFase6.nav-link(href='#fase6', hidden='true') Fase 6
        .Sacche(style='overflow: scroll;,width: 100%; height:100%;', data-offset='0', data-target='#navbarNavDropdown', data-spy='scroll')
            a.float.aggiungiFase(href='#')
                i.fa.fa-plus.my-float
            .label-container
                .label-text Aggiungi Fase
                i.fa.fa-play.label-arrow
            h1 Dettagli Sacca
            .container
                .col-md-12.order-md-1
                    #fase1.container-fluid
                    .card
                        .card-header
                            h4.mb-3 Dati Generici
                        .card-body
                            form.needs-validation(novalidate='')
                                .row
                                    .col-md-4.mb-3
                                        label(for='uid') UID Sacca
                                        input#uid.form-control(type='text', placeholder='', value='', required='', readonly="readonly")
                                        .invalid-feedback#invalidUid
                                            | UID non valido.
                                    .col-md-4.mb-3
                                        label(for='uidPaziente') UID Paziente
                                        input#uidPaziente.form-control(type='text', placeholder='', value='', required='', readonly="readonly")
                                        .invalid-feedback
                                            | UID paziente non valido.
                                    .col-md-4.mb-3
                                        label(for='uidPersonale') UID Personale
                                        .input-group
                                            .input-group-prepend
                                                span.input-group-text @
                                            input#uidPersonale.form-control(type='text', placeholder='', required='', readonly="readonly")
                                            .invalid-feedback(style='width: 100%;')
                                                | UID personale non valido.
                                .row
                                    .col-md-8.mb-3
                                        label(for='fase')
                                            | Fase
                                        input#fase.form-control(type='text', placeholder='', readonly="readonly")
                                        .invalid-feedback
                                            | Fase di elaborazione non valida
                                    .col-md-4.mb-3
                                        br
                                        .custom-control.custom-checkbox
                                            input#trasfusa.custom-control-input(type='checkbox',style='text-align: center;',onclick="return false;")
                                            label.custom-control-label(for='trasfusa') Trasfusa
                    hr.md-12.mb-3
                    .card
                        .card-header
                            | FASE 1
                        .card-body
                            .md-12.mb-3
                                label(for='luogoRaccolta') Luogo Raccolta
                                input#luogoRaccolta.form-control(type='text', placeholder='', required='', readonly="readonly")
                                .invalid-feedback
                                    | Inserisci il luogo di raccolta
                            .md-12.mb-3
                                label(for='tipoDonazione')
                                    | Tipo di donazione e procedura adottata
                                input#tipoDonazione.form-control(type='text', placeholder='', readonly="readonly")
                                .invalid-feedback
                                    | Inserisci tipo Donazione
                            .row
                                .col-md-4.mb-3
                                    label(for='anticoagulante') Anticoagulante impiegato e volume
                                    input#anticoagulante.form-control(type='text', placeholder='', readonly="readonly")
                                    .invalid-feedback
                                        | Inserisci i deti inerenti al Anticoagulante
                                .col-md-4.mb-3
                                    label(for='conservante') Conservante impiegato e volume
                                    input#conservante.form-control(type='text', placeholder='', readonly="readonly")
                                    .invalid-feedback
                                        | Inserisci i dati relativi all'conservante
                                .col-md-4.mb-3
                                    label(for='volumeEmocomponenti') Volume degli emocomponenti raccolti
                                    input#volumeEmocomponenti.form-control(type='Number' Step="0.01", placeholder='', readonly="readonly")
                                    .invalid-feedback
                                        | Inserisci Volume valido
                            .row
                                .col-md-8.mb-3
                                    label(for='dateStamp')
                                        | Data e ora della procedura di raccolta
                                    input#dateStamp.form-control.datetimepicker-input(type='text', data-toggle='datetimepicker', data-target='#dateStamp', readonly="readonly", disabled="")
                                    .invalid-feedback
                                        | Inserisci data valida
                                .col-md-4.mb-3
                                    label(for='durata') Durata
                                    input#durata.form-control(type='text', placeholder='', readonly="readonly")
                                    .invalid-feedback
                                        | Inserisci la durata

                            .md-12.mb-3
                                label(for='codiceFiscaleDonatore') CodiceFiscale Donatore
                                input#codiceFiscaleDonatore.form-control(type='text', placeholder='', readonly="readonly")
                                .invalid-feedback
                                    | Inserisci CodiceFiscale Donatore
                            .row
                                .col-md-6.mb-3
                                    label(for='esitoDonazione') Esito Donazione
                                    input#esitoDonazione.form-control(type='text', placeholder='',readonly="readonly")
                                    .invalid-feedback
                                        | Inserisci Esito Donazione
                                .col-md-6.mb-3
                                    label(for='tipoEmocomponente') Tipo Emocomponente
                                    input#tipoEmocomponente.form-control(type='text', placeholder='',readonly="readonly")
                                    .invalid-feedback
                                        | Inserisci Tipo Emocomponente
                    #fase2.ccontainer-fluid
                    hr.md-12.mb-3#fase2Hr
                    .card#fase2Card
                        .card-header
                            | FASE 2
                        .card-body
                            .row
                                .col-md-8.mb-3
                                    label(for='laboratorioProvenienza') Laboratorio di Provenienza
                                    input#laboratorioProvenienza.form-control(type='text', placeholder='',readonly="readonly")
                                    .invalid-feedback
                                        | Inserisci Laboratorio di Provenienza
                                .col-md-4.mb-3
                                    label(for='fenotipo') Fenotipo
                                    input#fenotipo.form-control(type='text', placeholder='', readonly="readonly")
                                    .invalid-feedback
                                        | Inserisci Fenotipo
                            .md-12.mb-3
                                label(for='laboratorioAnalisi') Laboratorio Analisi
                                input#laboratorioAnalisi.form-control(type='text', placeholder='', readonly="readonly")
                                .invalid-feedback
                                    | Inserisci Laboratorio Analisi
                    #fase3.container-fluid
                    hr.md-12.mb-3#fase3Hr
                    .card#fase3Card
                        .card-header
                            | FASE 3
                        .card-body
                            .md-12.mb-3
                                label(for='tipoEmoderivato') Tipo Emoderivato
                                input#tipoEmoderivato.form-control(type='text', placeholder='', readonly="readonly")
                                .invalid-feedback
                                    | Inserisci Tipo Emoderivato
                            .md-12.mb-3
                                label(for='tipoLavorazione') Tipo Lavorazione
                                input#tipoLavorazione.form-control(type='text', placeholder='', readonly="readonly")
                                .invalid-feedback
                                    | Inserisci Tipo Lavorazione
                    #fase4.container-fluid
                    hr.md-12.mb-3#fase4Hr
                    .card#fase4Card
                        .card-header
                            | FASE 4
                        .card-body
                            .md-12.mb-3
                                label(for='dataScadenza')
                                    | Data di scadenza
                                input#dataScadenza.form-control.datetimepicker-input(readonly="readonly", type='text', data-toggle='datetimepicker', data-target='#dataScadenza', disabled="")
                                .invalid-feedback
                                    | Inserisci data valida
                    #fase5.container-fluid
                    hr.md-12.mb-3#fase5Hr
                    .card#fase5Card
                        .card-header
                            | FASE 5
                        .card-body
                            .md-12.mb-3
                                label(for='dataSomministrazione')
                                    | Data di Somministrazione
                                input#dataSomministrazione.form-control.datetimepicker-input(disabled="", readonly="readonly", type='text', data-toggle='datetimepicker', data-target='#dataSomministrazione')
                                .invalid-feedback
                                    | Inserisci data valida
                            .row
                                .col-md-6.mb-3
                                    label(for='medicoResponsabile') Medico Responabile
                                    input#medicoResponsabile.form-control(type='text', placeholder='', readonly="readonly")
                                    .invalid-feedback
                                        | Inserisci Nome Medico responsabile
                                .col-md-6.mb-3
                                    label(for='infermiereResponsabile') Infermiere Responsabile
                                    input#infermiereResponsabile.form-control(type='text', placeholder='', readonly="readonly")
                                    .invalid-feedback
                                        | Inserisci Nome Infermiere responsabile
                            .md-12.mb-3
                                label(for='nosograficoPaziente') Nosogragico Paziente
                                input#nosograficoPaziente.form-control(type='text', placeholder='', readonly="readonly")
                                .invalid-feedback
                                    | Inserisci Nosografico Paziente
                    #fase6.container-fluid
                    hr.md-12.mb-3
                    |""
                    |""
                    |""
