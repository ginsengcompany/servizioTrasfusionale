    #myModal.modal
        // Modal content
        .modal-content
            .modal-header
                h1#titoloModal
                span.close Ã—
            .modal-body.group
                //FASE 2
                .div#displayFase2(hidden='true')
                    .row
                        .col-md-8.mb-3
                            label(for='laboratorioProvenienzaInsert') Laboratorio di Provenienza
                            input#laboratorioProvenienzaInsert.form-control(type='text', placeholder='')
                            small#laboratorioProvenienzaInvalid.form-text.text-muted.font-italic
                        .col-md-4.mb-3
                            label(for='fenotipoInsert') Fenotipo
                            input#fenotipoInsert.form-control(type='text', placeholder='')
                            small#fenotipoInvalid.form-text.text-muted.font-italic
                    .md-12.mb-3
                        label(for='laboratorioAnalisiInsert') Laboratorio Analisi
                        input#laboratorioAnalisiInsert.form-control(type='text', placeholder='')
                        small#laboratorioAnalisiInvalid.form-text.text-muted.font-italic
                //FASE 3
                .div#displayFase3(hidden='true')
                    .md-12.mb-3
                        label(for='tipoEmoderivatoInsert') Tipo Emoderivato
                        input#tipoEmoderivatoInsert.form-control(type='text', placeholder='')
                        small#tipoEmoderivatoInvalid.form-text.text-muted.font-italic
                    .md-12.mb-3
                        label(for='tipoLavorazioneInsert') Tipo Lavorazione
                        input#tipoLavorazioneInsert.form-control(type='text', placeholder='')
                        small#tipoLavorazioneInvalid.form-text.text-muted.font-italic
                //FASE 4
                .div#displayFase4(hidden='true')
                    .md-12.mb-3
                        label(for='dataScadenzaInsert')
                            | Data di scadenza
                        input#dataScadenzaInsert.form-control.datetimepicker-input(readonly="readonly", type='text', data-toggle='datetimepicker', data-target='#dataScadenzaInsert')
                        small#dataScadenzaInvalid.form-text.text-muted.font-italic
                //FASE 5
                .div#displayFase5(hidden='true')
                    .md-12.mb-3
                        label(for='dataSomministrazioneInsert')
                            | Data di Somministrazione
                        input#dataSomministrazioneInsert.form-control.datetimepicker-input(readonly="readonly", type='text', data-toggle='datetimepicker', data-target='#dataSomministrazioneInsert')
                        small#dataSomministrazioneInvalid.form-text.text-muted.font-italic
                    .row
                        .col-md-6.mb-3
                            label(for='medicoResponsabileInsert') Medico Responabile
                            input#medicoResponsabileInsert.form-control(type='text', placeholder='')
                            small#medicoResponsabileInvalid.form-text.text-muted.font-italic
                        .col-md-6.mb-3
                            label(for='infermiereResponsabileInsert') Infermiere Responsabile
                            input#infermiereResponsabileInsert.form-control(type='text', placeholder='')
                            small#infermiereResponsabileInvalid.form-text.text-muted.font-italic

                    .md-12.mb-3
                        label(for='nosograficoPazienteInsert') Nosogragico Paziente
                        input#nosograficoPazienteInsert.form-control(type='text', placeholder='')
                        small#nosograficoPazienteInvalid.form-text.text-muted.font-italic

            .modal-footer
                button#updateSacca.btn.btn-success.updateSacca CONTINUA

block append javascript
    script(type='text/javascript', src = '/javascript/dettagliSacca.js')
