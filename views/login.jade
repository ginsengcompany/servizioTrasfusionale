extends layout

block title
    title login
block style
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
block body
    body
        .login
            h1 Login
            form
                input#idOperatore(type='text', placeholder='Id operatore', required='required')
                input#password(type='password', placeholder='Password', required='required')
            button#btnLogin.btn.btn-primary.btn-block.btn-large(type='submit') LOGIN.
block append javascript
    script(type='text/javascript', src = '/javascript/login.js')
