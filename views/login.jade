extends layout

block title
    title login
block body
    body
        .login
            h1 Login
            form
                input#idOperatore(type='text', placeholder='Id operatore', required='required')
                input#password(type='password', placeholder='Password', required='required')
            button#btnLogin.btnStyle.btnStyle-primary.btnStyle-block.btnStyle-large(type='submit') LOGIN.
